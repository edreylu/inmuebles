<html xmlns:th="http://www.thymeleaf.org">
    <head th:replace="layout :: head">
        
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    </head>
    <body onload="nobackbutton();">
        <header th:replace="layout :: header"></header>
       <div class="container mt-2 col-lg-6">
           <div class="card">
                <div class="card-header">
                    <center><b class="tituloPrincipal">Asignar formas a Rol: </b>
                        <label style="font-size: medium;" th:text="${rolFormas.rol}"></label></center>   
                </div>
                <div class="card-body">
                    
                    
                    <form method="post" action="#" th:action="@{/roles/updateAgregarFormas/{id}(id=${noRol})}" th:object="${rolFormas}">
                   
                    <table class="table table-sm table-striped table-hover table-bordered table-wrapper-scroll-y my-custom-scrollbar" id="tablaDatos">
                    <thead>
                        <tr>
                            <th style="width: 20%;">NO</th>
                            <th style="width: 60%;">TITULO</th>
                            <th style="width: 20%;"> ASIGNADA</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr th:each="dato, stat: ${rolFormas.formas}">
                            <td style="width: 20%;" th:text="${dato.noFormaMenu}"></td>
                            <td style="width: 60%;" th:text="${dato.titulo}"></td>
                            <td style="width: 20%;">
                            <input type="checkbox" class="form-check-input" th:field="*{formas[__${stat.index}__].menuSeleccionado}">
                            <input type="hidden" th:field="*{formas[__${stat.index}__].noFormaMenu}" />
                            <input type="hidden" th:field="*{formas[__${stat.index}__].titulo}" />
                            </td>
                        </tr>
                    </tbody>
                </table>
                        <br/>
                        <br/>
                        <input type="submit" class="btn btn-success" value="Asignar">
                        <a href="../principal">Regresar</a>
                    </form>
                       
                </div>
            </div>
        </div>
        
    </body>
</html>
